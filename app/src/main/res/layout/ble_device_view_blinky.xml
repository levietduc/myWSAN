<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ble_device_view_background"
        android:orientation="vertical"
        android:padding="2dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="0dp">

            <Button
                android:id="@+id/buttonLedState"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/intensitybtn_led_off"
                android:text="" />

            <TextView
                android:id="@+id/textConnHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:padding="5dp"
                android:text="2" />

            <TextView
                android:id="@+id/labelButtonState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:padding="5dp"
                android:text="Button state"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textButtonState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:padding="5dp"
                android:text="Off" />

            <TextView
                android:id="@+id/labelLedState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:padding="5dp"
                android:text="LED state"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelConnHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="5dp"
                android:text="Connection Handle"
                android:textStyle="bold" />

        </GridLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="nRF52832 - Blinky"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitegrey"
            android:padding="5dp" />

    </LinearLayout>

</merge>