<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontBleDeviceLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#888888</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="FontBleDeviceField" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle"></item>
    </style>

    <style name="FontBleDeviceFieldOn" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#176f11</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="black">#FF000000</color>

    <color name="whitegrey">#FFF2F2F2</color>

</resources>
