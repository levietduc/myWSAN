<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FontBleDeviceLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#888888</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="FontBleDeviceField" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle"></item>
    </style>

    <style name="FontBleDeviceFieldOn" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#176f11</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Data Analytics-->

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
